{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('images/{{background}}')">{{title}}</section>
<h2>{{title}} animais disponíveis para adoção</h2>
{{/banner}}
<div class="container list">
{{#list}}
    <div class="item">
        <img src="images/{{image}}" class="item--image" />
        <div class="item--name">{{name }}Pastor-alemão</div>
        <div class="item--color">Cor: {{color}}</div>
        <div class="item--genre">Gênero: {{sex}}</div>
    </div>
    {{/list}}
</div>

{{^list}}
<div class="container no-list" >
<h2>Nao há animais disponíveis nessas condiçoês. </h2>
</div>
{{/list}}


{{>partials/footer}}